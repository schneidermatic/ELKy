export PROJECT_NAME="ELKy"

PATH=$PROJECT_HOME/resources:$PATH

##----------------------------------------
## SETUP HOST PREREQUISITES
##----------------------------------------
x_setup() {
    "$RESOURCES_HOME/scripts/setup.sh"
}

##----------------------------------------
## SHOW WEB CONSOLE ENDPOINT
##----------------------------------------
x_banner() {
   cat << EOM
  _____ _     _  __     
 | ____| |   | |/ /   _ 
 |  _| | |   | ' / | | |
 | |___| |___| . \ |_| |
 |_____|_____|_|\_\__, |
                  |___/ 
EOM
}

x_show_details() {
  x_banner
  IP_ADDRESS=$(ifconfig eth0 | grep 'inet ' | cut -d " " -f10 | awk '{ print $1}')
  cat << EOM                                                    
URL: https://$IP_ADDRESS:5601
USER: elastic
PASSWORD: changeme
EOM
}   

##----------------------------------------
## BASIC SETUP PROCEDURES
##----------------------------------------
x_up() {
  docker-compose up -d
  x_show_details 
}   

x_down() {
  docker-compose down -v
}

##########################################
##########################################
#####   ---   ALL COMMANDS    ---    #####
##########################################
##########################################
x_ls() {
  declare -F | grep "x_" | sed -E 's/declare -f //'
}
